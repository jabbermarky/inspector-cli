{
  "compilerOptions": {
    // "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "target": "ES2022",
    "module": "ESNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "ES6"
    ],
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@/*": [
        "*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}